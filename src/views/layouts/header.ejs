            <a href="/service" class="nav-item nav-link <%= currentRoute === '/service' ? 'active' : '' %>">Service</a>
            <a href="/pagemenu" class="nav-item nav-link <%= currentRoute === '/pagemenu' ? 'active' : '' %>">Menu</a>
            <a href="/cart" class="nav-item nav-link <%= currentRoute === '/cart' ? 'active' : '' %>">Cart</a>

           
        </div>
        <a href="" class="btn btn-primary py-2 px-4">Contact Us</a>
    </div>
</nav>
  <!-- End Navbar -->
